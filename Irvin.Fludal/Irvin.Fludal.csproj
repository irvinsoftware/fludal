<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <LangVersion>10</LangVersion>
        <PackageId>Fludal</PackageId>
        <Version>0.8.0</Version>
        <Title>Fluent Data Access Layer</Title>
        <Authors>Nate Irvin</Authors>
        <Copyright>Copyright Â© Nathaniel Irvin 2023</Copyright>
        <RepositoryUrl>https://github.com/irvinsoftware/fludal</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\system-extensions\SystemExtensions.Standard\SystemExtensions.Standard.csproj" Condition=" '$(Configuration)' == 'DebugEverything' " />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Irvin.SystemExtensions" Version="1.3.1" Condition=" '$(Configuration)' != 'DebugEverything' " />
    </ItemGroup>

</Project>
